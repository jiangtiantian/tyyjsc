<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f5f5f5"
              android:orientation="vertical" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/con"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0">
        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f5f5f5"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:orientation="horizontal"
            android:background="#3EA600"
            >
            <ImageView
                android:id="@+id/top1"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_weight="1"
                android:layout_marginTop="0.7dp"
                android:src="@mipmap/radio_topline"
                />
            <ImageView
                android:id="@+id/top2"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_weight="1"
                android:layout_marginTop="0.7dp"
                android:src="@mipmap/radio_topline"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/top3"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_weight="1"
                android:layout_marginTop="0.7dp"
                android:src="@mipmap/radio_topline"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/top4"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_weight="1"
                android:layout_marginTop="0.7dp"
                android:src="@mipmap/radio_topline"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/top5"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_weight="1"
                android:layout_marginTop="0.7dp"
                android:src="@mipmap/radio_topline"
                android:visibility="invisible"/>
            </LinearLayout>
        <RadioGroup
            android:id="@+id/rg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="false"
            android:background="#3EA600"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:paddingTop="3dp">

            <RadioButton
                android:id="@+id/hom"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="首页"
                android:background="@null"
                android:layout_weight="1.0"
                android:button="@null"
                android:textSize="@dimen/textsize_6"
                android:gravity="center"
                android:textColor="@color/white"
                android:checked="true"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/hm_lsw_tab_index_selector"/>

            <RadioButton
                android:id="@+id/sort"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="分类"
                android:layout_weight="1.0"
                android:button="@null"
                android:background="@null"
                android:textSize="@dimen/textsize_6"
                android:gravity="center"
                android:textColor="@color/white"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/hm_lsw_tab_sort_selector"/>
            <RadioButton
                android:id="@+id/member"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="全款购车"
                android:layout_weight="1.0"
                android:button="@null"
                android:background="@null"
                android:textSize="@dimen/textsize_6"
                android:gravity="center"
                android:textColor="@color/white"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/hm_lsw_tab_member_selector"/>
            <RadioButton
                android:id="@+id/cart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="购物车"
                android:background="@null"
                android:layout_weight="1.0"
                android:button="@null"
                android:textSize="@dimen/textsize_6"
                android:gravity="center"
                android:textColor="@color/white"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/hm_lsw_tab_cart_selector"/>
            <RadioButton
                android:id="@+id/my"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="我的"
                android:background="@null"
                android:layout_weight="1.0"
                android:button="@null"
                android:textSize="@dimen/textsize_6"
                android:gravity="center"
                android:textColor="@color/white"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/hm_lsw_tab_my_selector"/>
        </RadioGroup>
    </LinearLayout>

</LinearLayout>