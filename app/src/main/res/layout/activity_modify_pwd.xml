<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/base_bg_color"
              android:orientation="vertical">

    <include layout="@layout/bar_layout"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/deal_note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/oldpwd"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#FFFFFF"
                            android:gravity="center_vertical"
                            android:hint="原密码"
                            android:inputType="textPassword"
                            android:padding="@dimen/margin_30"
                            android:textColor="@color/label_txt_color"
                            android:textSize="@dimen/txt_size_8"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/base_bg_color"/>

                    <LinearLayout
                        android:id="@+id/draw_note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/newpwd"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#FFFFFF"
                            android:gravity="center_vertical"
                            android:hint="新密码"
                            android:inputType="textPassword"
                            android:padding="@dimen/margin_30"
                            android:textColor="@color/label_txt_color"
                            android:textSize="@dimen/txt_size_8"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/base_bg_color"/>

                    <LinearLayout
                        android:id="@+id/my_bank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/newpwdagain"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:background="#FFFFFF"
                            android:gravity="center_vertical"
                            android:hint="确认新密码"
                            android:inputType="textPassword"
                            android:padding="@dimen/margin_30"
                            android:textColor="@color/label_txt_color"
                            android:textSize="@dimen/txt_size_8"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:layout_gravity="top"
                    android:background="#dfdfdf"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:layout_gravity="bottom"
                    android:background="#dfdfdf"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:orientation="vertical"
                android:background="@color/base_bg_color">

                <Button
                    android:id="@+id/confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="25dp"
                    android:background="@drawable/dialog_btn_selector"
                    android:text="确定"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_8"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
