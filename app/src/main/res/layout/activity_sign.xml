<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA"
    android:orientation="vertical">
    <include
        layout="@layout/bar_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">
        <!-- hm_icon_sign_bg_p-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:text="当前活跃度"
            android:textColor="@color/goods_gray"
            android:textSize="@dimen/txt_size_8" />

        <TextView
            android:id="@+id/score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_15"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tipview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_7"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/qiandao_selector"
            android:drawableLeft="@mipmap/qiandao"
            android:drawablePadding="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:text="一键签到"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_8"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="签到领活跃度，累计签到活跃度更多哦~"
            android:textColor="@color/index_search_bg"
            android:textSize="@dimen/txt_size_7" />
    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/border_gray"/>

</LinearLayout>
