<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/bar_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLength="12"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/txt_size_9" />

    <ImageButton
        android:id="@+id/bar_right_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/hm_lsw_btn_selector"
        android:contentDescription="@null"
        android:padding="15dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/bar_right_txt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:contentDescription="@null"
        android:gravity="center"
        android:paddingLeft="@dimen/margin_30"
        android:paddingRight="@dimen/margin_30"
        android:textColor="@color/index_search_bg"
        android:textSize="@dimen/txt_size_8"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/back_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/hm_lsw_btn_selector"
        android:contentDescription="@null"
        android:padding="15dp"
        android:src="@mipmap/left" />

</RelativeLayout>