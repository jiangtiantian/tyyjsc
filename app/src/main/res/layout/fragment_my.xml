<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg_color"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- 登录布局 start-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:background="@mipmap/mine_bg">

                <ImageView
                    android:id="@+id/iv_sign"
                   android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_gravity="right"
                    android:src="@mipmap/mine_qiandao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/login"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@drawable/login_my_selector"
                    android:padding="5dp"
                    android:text="请先登录"
                    android:textColor="@color/index_search_bg"
                    android:textSize="@dimen/textsize_7"
                    android:visibility="invisible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="#806c6c6c"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0">

                        <TextView
                            android:id="@+id/money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawableLeft="@mipmap/mine_lastpay"
                            android:drawablePadding="3dp"
                            android:gravity="center"
                            android:padding="1dp"
                            android:text="账户余额"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textsize_6" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0">

                        <TextView
                            android:id="@+id/card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawableLeft="@mipmap/mine_bank"
                            android:drawablePadding="3dp"
                            android:gravity="center"
                            android:padding="2dp"
                            android:text="储值卡"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textsize_6" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0">

                        <TextView
                            android:id="@+id/ticket"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawableLeft="@mipmap/mine_quan"
                            android:drawablePadding="3dp"
                            android:gravity="center"
                            android:padding="2dp"
                            android:text="代金券"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textsize_6" />
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0">

                        <TextView
                            android:id="@+id/tv_coupon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawableLeft="@mipmap/coupon"
                            android:drawablePadding="3dp"
                            android:gravity="center"
                            android:padding="2dp"
                            android:text="点券"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textsize_6" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0">

                        <TextView
                            android:id="@+id/score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawableLeft="@mipmap/mine_score"
                            android:drawablePadding="3dp"
                            android:gravity="center"
                            android:padding="2dp"
                            android:text="积分"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textsize_6" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/center_ln"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <FrameLayout
                        android:id="@+id/my_center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <FrameLayout
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@mipmap/mine_avaster_bg">

                            <com.hemaapp.hm_FrameWork.view.RoundedImageView
                                android:id="@+id/logo"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/ic_launcher" />
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|right"
                            android:layout_marginBottom="20dp"
                            android:background="@mipmap/mine_user_rank">
                            <!--<ImageView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:src="@mipmap/mine_user_rank"/>-->
                            <TextView
                                android:id="@+id/level_logo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:drawableLeft="@mipmap/user_level"
                                android:gravity="center"
                                android:text="1"
                                android:textColor="@color/white"
                                android:textSize="@dimen/textsize_5" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/sex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|right"
                            android:layout_marginRight="10dp"
                            android:background="@mipmap/mine_user_rank"
                            android:gravity="center"
                            android:textColor="@color/white" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/logo"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="5dp"
                        android:drawablePadding="2dp"
                        android:text="sfsdfdsfsd"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize_8" />
                </LinearLayout>
            </FrameLayout>
            <!-- 登录布局 end-->
            <!-- 我的订单 start-->


            <!-- 我的钱包 start-->
            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/bg_tab_n" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/goods_order_all_rl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="商品订单"
                        android:textColor="@color/label_txt_color"
                        android:textSize="@dimen/textsize_7" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="5dp"
                        android:drawableRight="@mipmap/index_toright"
                        android:text="查看全部订单"
                        android:textColor="@color/goods_gray"
                        android:textSize="@dimen/textsize_6" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:background="@color/bg_tab_n" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/goods_dfk"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:drawablePadding="3dp"
                        android:drawableTop="@mipmap/mine_unpay"
                        android:gravity="center"
                        android:text="待付款"
                        android:textColor="@color/label_txt_color"
                        android:textSize="@dimen/textsize_6" />

                    <TextView
                        android:id="@+id/goods_dfh"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:drawablePadding="3dp"
                        android:drawableTop="@mipmap/mine_unsend"
                        android:gravity="center"
                        android:text="待发货"
                        android:textColor="@color/label_txt_color"
                        android:textSize="@dimen/textsize_6" />

                    <TextView
                        android:id="@+id/goods_dsh"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:drawablePadding="3dp"
                        android:drawableTop="@mipmap/mine_unget"
                        android:gravity="center"
                        android:text="待收货"
                        android:textColor="@color/label_txt_color"
                        android:textSize="@dimen/textsize_6" />

                    <TextView
                        android:id="@+id/goods_dpj"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:drawablePadding="3dp"
                        android:drawableTop="@mipmap/mine_unevaluate"
                        android:gravity="center"
                        android:text="待评价"
                        android:textColor="@color/label_txt_color"
                        android:textSize="@dimen/textsize_6" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/order_all_rl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="套餐订单"
                        android:textColor="@color/label_txt_color"
                        android:textSize="@dimen/textsize_7" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="5dp"
                        android:drawableRight="@mipmap/index_toright"
                        android:text="查看全部订单"
                        android:textColor="@color/goods_gray"
                        android:textSize="@dimen/textsize_6" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:background="@color/bg_tab_n" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/dfk"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:drawablePadding="3dp"
                        android:drawableTop="@mipmap/mine_unpay"
                        android:gravity="center"
                        android:text="待付款"
                        android:textColor="@color/label_txt_color"
                        android:textSize="@dimen/textsize_6" />

                    <TextView
                        android:id="@+id/dfh"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:drawablePadding="3dp"
                        android:drawableTop="@mipmap/mine_unsend"
                        android:gravity="center"
                        android:text="待发货"
                        android:textColor="@color/label_txt_color"
                        android:textSize="@dimen/textsize_6" />

                    <TextView
                        android:id="@+id/dsh"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:drawablePadding="3dp"
                        android:drawableTop="@mipmap/mine_unget"
                        android:gravity="center"
                        android:text="待收货"
                        android:textColor="@color/label_txt_color"
                        android:textSize="@dimen/textsize_6" />

                    <TextView
                        android:id="@+id/dpj"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:drawablePadding="3dp"
                        android:drawableTop="@mipmap/mine_unevaluate"
                        android:gravity="center"
                        android:text="待评价"
                        android:textColor="@color/label_txt_color"
                        android:textSize="@dimen/textsize_6" />
                </LinearLayout>
            </LinearLayout>
            <!-- 我的订单 end-->

            <!-- 我的钱包 end-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:background="@color/bg_tab_n" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/circle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="3dp"
                        android:drawableRight="@mipmap/index_toright"
                        android:gravity="start"
                        android:padding="10dp"
                        android:text="我的朋友圈"
                        android:textColor="@color/label_txt_color"
                        android:textSize="@dimen/textsize_7" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.6dp"
                        android:background="@color/bg_tab_n" />

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="3dp"
                        android:drawableRight="@mipmap/index_toright"
                        android:gravity="start"
                        android:padding="10dp"
                        android:text="收货地址"
                        android:textColor="@color/label_txt_color"
                        android:textSize="@dimen/textsize_7" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.6dp"
                        android:background="@color/bg_tab_n" />

                    <TextView
                        android:id="@+id/collection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="3dp"
                        android:drawableRight="@mipmap/index_toright"
                        android:gravity="start"
                        android:padding="10dp"
                        android:text="我的收藏"
                        android:textColor="@color/label_txt_color"
                        android:textSize="@dimen/textsize_7" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.6dp"
                        android:background="@color/bg_tab_n" />
                    <TextView
                        android:id="@+id/qr_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="3dp"
                        android:drawableRight="@mipmap/index_toright"
                        android:gravity="start"
                        android:padding="10dp"
                        android:text="生成二维码"
                        android:textColor="@color/label_txt_color"
                        android:textSize="@dimen/textsize_7" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.6dp"
                        android:background="@color/bg_tab_n" />

                    <TextView
                        android:id="@+id/link"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="3dp"
                        android:drawableRight="@mipmap/index_toright"
                        android:gravity="start"
                        android:padding="10dp"
                        android:text="联系客服"
                        android:textColor="@color/label_txt_color"
                        android:textSize="@dimen/textsize_7" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.6dp"
                        android:background="@color/bg_tab_n" />

                    <TextView
                        android:id="@+id/set"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="3dp"
                        android:drawableRight="@mipmap/index_toright"
                        android:gravity="start"
                        android:padding="10dp"
                        android:text="设置"
                        android:textColor="@color/label_txt_color"
                        android:textSize="@dimen/textsize_7" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>