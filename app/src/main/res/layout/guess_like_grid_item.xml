<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1.0dp"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/limit_item_bg_color">
            <com.hemaapp.tyyjsc.view.CusImageView
                android:id="@+id/item_img"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/hm_icon_def"
                android:scaleType="centerCrop"/>
            <FrameLayout
                android:id="@+id/endFL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"

                    android:contentDescription="@null"
                    android:scaleType="fitXY"/>
                <TextView
                    android:id="@+id/status_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:text="已结束"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_7"/>
            </FrameLayout>
        </FrameLayout>
        <TextView
            android:id="@+id/item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:text="麻辣美味辣条"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/txt_size_7"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp">
            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/item_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:text="¥0"
                        android:textColor="@color/index_search_bg"
                        android:textSize="@dimen/txt_size_8"/>
                    <TextView
                        android:id="@+id/item_old_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="¥0"
                        android:textColor="@color/code"
                        android:textSize="@dimen/txt_size_6"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/item_salenum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:text="已售0件"
                        android:textColor="@color/code"
                        android:textSize="@dimen/txt_size_6"/>
                    <TextView
                        android:id="@+id/item_stock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:text="库存0"
                        android:textColor="@color/code"
                        android:textSize="@dimen/txt_size_6"
                        android:visibility="invisible"/>
                </LinearLayout>
            </LinearLayout>
            <ImageButton
                android:id="@+id/item_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:clickable="false"
                android:src="@mipmap/to_cart"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
