<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <!--  标题 start-->
        <TextView
            android:id="@+id/opt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:text="支付完成"
            android:textColor="@color/pay"
            android:textSize="@dimen/txt_size_8"/>
        <!--  标题 end-->

        <!--  提示积分或代金券 start-->
        <LinearLayout
            android:id="@+id/profitlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/profit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingTop="5dp"
                android:layout_marginBottom="30dp"
                android:text="确认收货后，可获得100积分+100代金券"
                android:textColor="@color/goods_gray"
                android:textSize="@dimen/txt_size_8"/>
        </LinearLayout>
        <!--  提示积分或代金券 end-->

        <!--  支付密码 start-->
        <LinearLayout
            android:id="@+id/inputlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <EditText
                android:id="@+id/pwd"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/et_corner_shape"
                android:singleLine="true"
                android:paddingLeft="@dimen/margin_10"
                android:password="true"
                android:textSize="@dimen/textsize_8"
                android:textColor="@color/label_txt_color"/>
            <TextView
                android:id="@+id/forgetpwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:padding="10dp"
                android:text="忘记支付密码? "
                android:textColor="@color/index_search_bg"
                android:textSize="@dimen/txt_size_7"/>
        </LinearLayout>
        <!--  支付密码 end-->

        <!--  性别选择框 start-->
        <LinearLayout
            android:id="@+id/sexLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="15dp">
                    <TextView
                        android:id="@+id/boy_txt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:drawablePadding="3dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:gravity="center"
                        android:text="男"
                        android:focusable="false"
                        android:background="@color/index_search_bg"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_size_8"/>
                    <TextView
                        android:id="@+id/girl_txt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:drawablePadding="3dp"
                        android:gravity="center"
                        android:background="@color/white"
                        android:text="女"
                        android:focusable="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_size_8"/>
        </LinearLayout>
        <!--  性别选择框  end-->
        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/border_gray"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/cancle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:text="取消"
                android:background="@null"
                android:padding="10dp"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:textColor="@color/sex"
                android:textSize="@dimen/txt_size_8"/>
            <Button
                android:id="@+id/confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:padding="10dp"
                android:text="确定"
                android:background="@null"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:textColor="@color/green"
                android:textSize="@dimen/txt_size_8"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>