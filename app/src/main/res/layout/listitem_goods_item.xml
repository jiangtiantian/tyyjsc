<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/cn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="@dimen/margin_10"
            android:paddingLeft="@dimen/margin_20"
            android:paddingTop="@dimen/margin_10">

            <com.hemaapp.tyyjsc.view.CusImageView
                android:id="@+id/item_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:src="@mipmap/hm_icon_def"/>

            <TextView
                android:id="@+id/item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/item_img"
                android:ellipsize="end"
                android:padding="5dp"
                android:singleLine="true"
                android:text="麻辣美味辣条"
                android:textColor="@color/txt_color"
                android:textSize="@dimen/txt_size_7"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_name"
                android:layout_toRightOf="@+id/item_img">
                <LinearLayout
                    android:id="@+id/layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/item_salenum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="已售0件"
                            android:textColor="@color/code"
                            android:textSize="@dimen/txt_size_6"/>
                        <TextView
                            android:id="@+id/item_stock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="库存0"
                            android:textColor="@color/code"
                            android:textSize="@dimen/txt_size_6"
                           />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/item_price"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:text="¥0"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_size_8"/>
                        <TextView
                            android:id="@+id/item_old_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="¥0"
                            android:textColor="@color/code"
                            android:textSize="@dimen/txt_size_6"
                            android:visibility="gone"/>
                        <TextView
                            android:id="@+id/go_forward_sale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_20"
                            android:text="立即预定"
                            android:textColor="@color/white"
                            android:padding="5dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/index_search_bg"
                            android:textSize="@dimen/txt_size_7"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_below="@+id/cn"
            android:layout_marginLeft="@dimen/margin_20"
            android:background="@color/bg_tab_n"/>

    </RelativeLayout>
</LinearLayout>