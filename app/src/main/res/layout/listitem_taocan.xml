<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:background="@color/white">

    <com.hemaapp.tyyjsc.view.CusImageView
        android:id="@+id/item_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/hm_icon_def"/>

    <TextView
        android:id="@+id/item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_img"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:ellipsize="end"
        android:padding="5dp"
        android:maxLines="2"
        android:text="麻辣美味辣条"
        android:textColor="@color/txt_color"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/item_sale_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/item_img"
        android:layout_marginRight="10dp"
        android:paddingBottom="5dp"
        android:padding="5dp"
        android:text="库存0"
        android:textColor="@color/code"
        android:textSize="@dimen/txt_size_6"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_img"
        android:layout_alignBottom="@+id/item_img"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="已售0件"
            android:textColor="@color/txt_color"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/item_old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="库存0"
            android:textColor="@color/code"
            android:textSize="@dimen/txt_size_6"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:src="@color/line_color"
        android:layout_below="@id/item_img"
        android:layout_marginTop="10dp"/>

</RelativeLayout>