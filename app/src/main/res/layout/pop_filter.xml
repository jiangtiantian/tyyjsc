<?xml version="1.0" encoding="utf-8"?>
<com.hemaapp.hm_lsw.view.PopLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:fillViewport="true"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/price_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="价格区间(元)"
                    android:textColor="@color/label_txt_color"
                    android:textSize="@dimen/textsize_8"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/base_bg_color">
                        <EditText
                            android:id="@+id/from"
                            android:layout_width="100dp"
                            android:layout_height="35dp"

                            android:inputType="numberDecimal"
                            android:paddingLeft="@dimen/margin_10"
                            android:singleLine="true"/>
                    </LinearLayout>
                    <View
                        android:layout_width="10dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:background="@color/divider_color"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/base_bg_color">
                        <EditText
                            android:id="@+id/to"
                            android:layout_width="100dp"
                            android:layout_height="35dp"
                            android:inputType="numberDecimal"
                            android:paddingLeft="@dimen/margin_10"
                            android:singleLine="true"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/bg_tab_n"/>
            <LinearLayout
                android:id="@+id/label_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:visibility="gone">
                <TextView
                    android:id="@+id/label_arrow_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="标签"
                    android:textColor="@color/label_txt_color"
                    android:textSize="@dimen/textsize_8"/>
                <com.hemaapp.hm_lsw.view.FlowLayout
                    android:id="@+id/labels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/bg_tab_n"/>
            <LinearLayout
                android:id="@+id/type_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:visibility="gone">
                <TextView
                    android:id="@+id/type_arrow_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="类别"
                    android:textColor="@color/label_txt_color"
                    android:textSize="@dimen/textsize_8"/>
                <com.hemaapp.hm_lsw.view.FlowLayout
                    android:id="@+id/sorts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
            <Button
                android:id="@+id/reset"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="@dimen/margin_60"

                android:text="重置"
                android:textColor="@color/limit_bg_color"
                android:textSize="@dimen/textsize_8"/>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/bg_tab_n"/>
        <Button
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/dialog_btn_selector"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_8"/>
    </RelativeLayout>
</com.hemaapp.hm_lsw.view.PopLinearLayout>