<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/transparent"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5"
        android:padding="5dp"
        android:background="@drawable/share_bg_circle"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/wb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:paddingBottom="30dp"
            android:paddingTop="30dp"
            android:text="微博"
            android:textColor="#2f2f2f"
            android:textSize="@dimen/textsize_7"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/wx"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/share_weixin"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:text="微信"
            android:textColor="#2f2f2f"
            android:textSize="@dimen/textsize_7"/>
        <TextView
            android:id="@+id/wxfriend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/share_friend"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:text="朋友圈"
            android:textColor="#2f2f2f"
            android:textSize="@dimen/textsize_7"/>
        <TextView
            android:id="@+id/qq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:text="QQ"
            android:drawableTop="@mipmap/share_qq"
            android:textColor="#2f2f2f"
            android:textSize="@dimen/textsize_7"
            />
        <TextView
            android:id="@+id/qqzone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:text="QQ空间"
            android:drawableTop="@mipmap/share_zone"
            android:textColor="#2f2f2f"
            android:textSize="@dimen/textsize_7"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5"
        android:background="@drawable/share_bg_circle"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/margin_25"
            android:text="取消"
            android:textColor="#2f2f2f"
            android:textSize="@dimen/textsize_7.5"/>
    </LinearLayout>
</LinearLayout>